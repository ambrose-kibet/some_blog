<div class="card">
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= link_to comment.user.name, user_path(comment.user) %> 
        <Span>
        <%=comment.text%></p>
        <%if can? :destroy, comment %>
        <%= link_to 'Remove', user_post_comment_path(comment.post.user, comment.post, comment), method: :delete, data: { turbo_method: :delete } %>
        <%end%>
      </Span>
    </blockquote>
  </div>
</div>
