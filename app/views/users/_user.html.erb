<article class="container d-flex mb-3 article-container">
  <div class="img-container">
    <img src="<%= user.photo %>" alt="<%= user.name %> photo" width="100%" height="100%">
  </div>
  <div class="user-card px-2">
    <h3 class="text-start">
      <%= link_to user.name, user_path(user) %>
    </h3>
    <p class="text-end">Number of posts: <%= user.posts_counter %></p>
  </div>
</article>
